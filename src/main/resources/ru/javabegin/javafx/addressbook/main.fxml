<VBox minHeight="500.0" minWidth="400.0" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.javabegin.javafx.addressbook.controllers.MainController">
   <children>
      <HBox maxHeight="50.0" prefHeight="50.0">
         <children>
            <Button fx:id="btnAdd" minWidth="70.0" mnemonicParsing="false" onAction="#actionButtonPressed" prefHeight="25.0" prefWidth="70.0" text="%add">
               <HBox.margin>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnEdit" maxWidth="70.0" minWidth="70.0" mnemonicParsing="false" onAction="#actionButtonPressed" prefHeight="25.0" text="%edit">
               <HBox.margin>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnDelete" minWidth="70.0" mnemonicParsing="false" onAction="#actionButtonPressed" prefHeight="25.0" prefWidth="70.0" text="%delete">
               <HBox.margin>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <AnchorPane fx:id="anchorPaneForSearch" maxHeight="30.0" prefHeight="30.0">
         <children>
            <Button fx:id="btnSearch" layoutX="277.0" layoutY="6.0" minWidth="70.0" mnemonicParsing="false" onAction="#actionSearch" prefHeight="25.0" prefWidth="51.0" text="%search" AnchorPane.rightAnchor="0.0" />
            <TextFields fx:id="txtSearch" layoutY="6.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="80.0" fx:factory="createClearableTextField" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" />
         </VBox.margin>
      </AnchorPane>
      <AnchorPane prefHeight="285.0" prefWidth="354.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tableAddressBook" prefHeight="228.0" prefWidth="354.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columns>
                <TableColumn fx:id="tableColumnFio" prefWidth="183.33334350585938" text="%fio" />
                <TableColumn fx:id="tableColumnPhone" prefWidth="174.0" text="%phone_number" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </VBox.margin>
      </AnchorPane>
      <AnchorPane prefHeight="13.0" prefWidth="354.0">
         <children>
            <Label fx:id="labelCount" text="Количество записей: " AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="20.0" right="20.0" top="5.0" />
         </VBox.margin>
      </AnchorPane>
   </children>
</VBox>
